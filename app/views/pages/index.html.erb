<div id="pages-index-page">
  <div class="index-container">
    <% if @types.count > 0 %>
    <div class="class-container">
      <h4>Classes:</h4>
      <% @types.sort { |a, b| a.name <=> b.name }.each do |type| %>
        <div>
          <p><big><%= link_to "#{type.name}", type %></big></p>
          <p><%= type.description.truncate(140, separator: ' ') %></p>
        </div>
      <% end %>
    </div>
    <% end %>
    <%= render 'functions/list', functions: @functions %>
  </div>
</div>
